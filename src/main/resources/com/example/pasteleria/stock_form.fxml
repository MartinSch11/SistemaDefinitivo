<DialogPane prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StockFormController">
    <stylesheets>
        <URL value="@../../../css/event_form.css" />
    </stylesheets>
    <graphic>
        <Pane prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: f7ede3;">
            <GridPane layoutX="78.0" layoutY="340.0" prefHeight="30.0" prefWidth="294.0">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Button fx:id="btnAceptar" alignment="CENTER" mnemonicParsing="false" onAction="#handleAceptar" styleClass="buttons" stylesheets="@../../../css/components.css" text="Aceptar">
                    <font>
                        <Font name="Inter Regular" size="13.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" styleClass="buttons" stylesheets="@../../../css/components.css" text="Cancelar" GridPane.columnIndex="1">
                    <font>
                        <Font name="Inter Regular" size="13.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </GridPane>
            <Label layoutX="48.0" layoutY="79.0" styleClass="texto" text="Nombre del Insumo">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="nombreInsumoField" layoutX="47.0" layoutY="111.0" prefHeight="24.0" prefWidth="200.0" promptText="Nombre del Insumo">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </TextField>
            <Label layoutX="48.0" layoutY="136.0" styleClass="texto" text="Cantidad">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="cantidadField" layoutX="49.0" layoutY="167.0" prefHeight="24.0" prefWidth="170.0" promptText="Cantidad comprada. Ej: 2 litros">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </TextField>
            <Label layoutX="48.0" layoutY="200.0" styleClass="texto" text="Fecha de Caducidad">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </Label>
            <Label layoutX="49.0" layoutY="255.0" styleClass="texto" text="Lote">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="loteField" layoutX="49.0" layoutY="287.0" prefHeight="24.0" prefWidth="170.0" promptText="Número de lote">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </TextField>
            <Pane prefHeight="55.0" prefWidth="450.0" style="-fx-background-color: B70505;">
                <Label layoutX="162.0" layoutY="15.0" text="Añadir Insumo" textFill="WHITE">
                    <font>
                        <Font name="Inter Regular" size="20.0" />
                    </font>
                </Label>
            </Pane>
            <DatePicker layoutX="47.0" layoutY="230.0" />
            <Label layoutX="247.0" layoutY="136.0" prefHeight="25.0" prefWidth="60.0" styleClass="texto" text="Medida">
                <font>
                    <Font name="Inter Regular" size="13.0" />
                </font>
            </Label>
            <ChoiceBox fx:id="medidaChoiceBox" layoutX="247.0" layoutY="167.0" prefHeight="25.0" prefWidth="70.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Litros" />
                        <String fx:value="Kilos" />
                        <String fx:value="Gramos" />
                        <String fx:value="Unidades" />
                    </FXCollections>
                </items>
            </ChoiceBox>
        </Pane>
    </graphic>
</DialogPane>
