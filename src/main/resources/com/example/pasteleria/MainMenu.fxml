            </font>
         </Text>

         <!-- Caducidad Insumos Button -->
         <Button id="btnCaducidadInsumos" fx:id="btnCaducidadInsumos" mnemonicParsing="false" onAction="#handleCaducidadInsumos" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <ImageView fitHeight="115.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="buttonsMainMenuImage">
                  <Image url="@../../../com.example.image/iconCadInsumo.png" />
               </ImageView>
            </graphic>
         </Button>
         <Text styleClass="txtButtonsMainMenu" text="Caducidad Insumos" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <font>
               <Font name="Inter 18pt Regular" size="14.0" />
            </font>
         </Text>

         <!-- Productos Button -->
         <Button id="btnProductos" fx:id="btnProductos" mnemonicParsing="false" onAction="#handleProductos" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <graphic>
               <ImageView fitHeight="115.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="buttonsMainMenuImage">
                  <Image url="@../../../com.example.image/iconProductos.png" />
