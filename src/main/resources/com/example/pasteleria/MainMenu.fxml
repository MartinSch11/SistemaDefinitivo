         <Text styleClass="txtButtonsMainMenu" text="Proveedores" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <font>
               <Font name="Inter 18pt Regular" size="14.0" />
