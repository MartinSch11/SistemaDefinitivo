<AnchorPane prefHeight="720" prefWidth="1360" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProveedoresController">
    <stylesheets>
        <URL value="@../../../css/components.css" />
    </stylesheets>
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0" styleClass="pane-principal" stylesheets="@../../../css/components.css">
         <children>
            <Pane layoutX="-2.0" prefHeight="200.0" prefWidth="200.0" styleClass="pane-Header" stylesheets="@../../../css/components.css">
               <children>
                  <Label contentDisplay="CENTER" layoutX="630.0" layoutY="11.0" styleClass="title" stylesheets="@../../../css/components.css" text="Proveedores" textAlignment="CENTER" />
               </children>
            </Pane>
            <Button fx:id="btnVolver" layoutX="14.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleVolver" prefHeight="38.0" prefWidth="88.0" styleClass="button-Volver" stylesheets="@../../../css/components.css" text="Volver">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../com.example.image/arrow_left.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="Inter Regular" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button id="btnNuevoProveedor" fx:id="btnNuevoProveedor" layoutX="164.0" layoutY="71.0" mnemonicParsing="false" onAction="#handleNuevoProveedor" prefHeight="31.0" prefWidth="129.0" styleClass="buttons" stylesheets="@../../../css/components.css" text="Nuevo proveedor">
