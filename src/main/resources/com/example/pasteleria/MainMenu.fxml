<AnchorPane prefHeight="720" prefWidth="1360" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <stylesheets>
      <URL value="@../../../css/mainMenu.css" />
   </stylesheets>
   <Pane prefHeight="720" prefWidth="1360" style="-fx-background-color: f7ede3;">
      <Pane prefHeight="80.0" prefWidth="1360.0" style="-fx-background-color: B70505;">
         <Button fx:id="btnAyuda" layoutX="1290.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleAyuda" style="-fx-background-color: B70505;" styleClass="button-Ayuda-MainMenu" stylesheets="@../../../css/mainMenu.css">
            <graphic>
               <ImageView fitHeight="45.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../com.example.image/iconAyuda.png" />
                  </image>
               </ImageView>
            </graphic>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="adminLogin" alignment="BASELINE_LEFT" layoutX="14.0" layoutY="13.0" mnemonicParsing="false" onAction="#changeUser" prefHeight="55.0" prefWidth="157.0" styleClass="login" stylesheets="@../../../css/mainMenu.css" text="Admin" textFill="WHITE">
            <graphic>
               <ImageView fitHeight="41.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@../../../com.example.image/iconAvatarEnBlanco.png" />
               </ImageView>
            </graphic>
            <font>
               <Font size="14.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </Pane>
      <!-- GridPane for Main Menu Buttons -->
      <GridPane layoutX="435.0" layoutY="112.0" prefHeight="496.0" prefWidth="490.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>

         <!-- Estadísticas Button -->
         <Button id="btnEstadisticas" fx:id="btnEstadistica" mnemonicParsing="false" onAction="#handleEstadistica" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <StackPane prefHeight="150.0" prefWidth="200.0">
                  <children>
                     <ImageView fitHeight="115.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="buttonsMainMenuImage">
                        <Image url="@../../../com.example.image/iconEstadisticas.png" />
                     </ImageView>
                  </children>
               </StackPane>
            </graphic>
         </Button>
         <Text styleClass="txtButtonsMainMenu" text="Estadísticas" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
            <font>
               <Font name="Inter 18pt Regular" size="14.0" />
            </font>
         </Text>

         <!-- Eventos Button -->
         <Button id="btnEventos" fx:id="btnEventos" mnemonicParsing="false" onAction="#handleEventos" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <ImageView fitHeight="115.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="buttonsMainMenuImage">
