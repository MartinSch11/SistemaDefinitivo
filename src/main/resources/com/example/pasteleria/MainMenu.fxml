         <Text styleClass="txtButtonsMainMenu" text="Eventos" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
            <font>
               <Font name="Inter 18pt Regular" size="14.0" />
            </font>
         </Text>

         <!-- Pedidos Button -->
         <Button id="btnPedidos" fx:id="btnPedidos" mnemonicParsing="false" onAction="#handlePedidos" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <graphic>
               <ImageView fitHeight="115.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true" styleClass="buttonsMainMenuImage">
