                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <TextField layoutX="304.0" layoutY="72.0" prefHeight="30.0" prefWidth="699.0" promptText="Buscar por nombre o producto..." />
            <Button fx:id="btnBuscar" layoutX="1012.0" layoutY="70.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../com.example.image/iconBusqueda.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
