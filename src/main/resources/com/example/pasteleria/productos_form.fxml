<AnchorPane prefHeight="535.0" prefWidth="575.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProductoFormController">
<Pane prefHeight="535.0" prefWidth="575.0" style="-fx-background-color: f7ede3;">
    <stylesheets>
        <URL value="@../../../css/event_form.css" />
    </stylesheets>
    <!-- Encabezado -->
    <Pane layoutX="-1.0" prefHeight="55.0" prefWidth="576.0" style="-fx-background-color: B70505;">
        <Label layoutX="211.0" layoutY="15.0" text="Añadir Producto" textFill="WHITE">
            <font>
                <Font name="Inter Regular" size="20.0" />
            </font>
        </Label>
    </Pane>

    <!-- Campos de entrada -->
    <Label layoutX="48.0" layoutY="117.0" styleClass="texto" stylesheets="@../../../css/event_form.css" text="Descripción">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </Label>
    <Label layoutX="49.0" layoutY="64.0" styleClass="texto" stylesheets="@../../../css/event_form.css" text="Producto">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </Label>
    <Label layoutX="47.0" layoutY="278.0" styleClass="texto" stylesheets="@../../../css/event_form.css" text="Categoría">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </Label>
    <Label layoutX="330.0" layoutY="278.0" styleClass="texto" text="Precio">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </Label>
    <Label layoutX="49.0" layoutY="334.0" styleClass="texto" text="Sabor">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </Label>

    <!-- Campos de texto y botones -->
    <TextField fx:id="nombreProductoField" layoutX="47.0" layoutY="86.0" prefHeight="24.0" prefWidth="180.0" promptText="Nombre del producto">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </TextField>
    <TextArea fx:id="descripcionProductoField" layoutX="49.0" layoutY="142.0" prefHeight="130.0" prefWidth="450.0" promptText="Descripción del producto">
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
    </TextArea>
    <TextField fx:id="precioField" layoutX="323.0" layoutY="303.0" promptText="Precio">
        <font>
            <Font name="Inter Regular" size="13.0" />
