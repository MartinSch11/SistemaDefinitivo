    </TextField>
    <ChoiceBox fx:id="categoriaChoiceBox" layoutX="49.0" layoutY="303.0" prefWidth="200.0" />
    <Button fx:id="btnSeleccionarSabores" layoutX="47.0" layoutY="359.0" mnemonicParsing="false" onAction="#handleSeleccionarSabores" text="Seleccionar Sabores" />
    <Button fx:id="btnCargarImagen" layoutX="376.0" layoutY="359.0" mnemonicParsing="false" onAction="#handleCargarImagen" text="Cargar Imagen" />

    <!-- Botones de acción -->
    <GridPane layoutX="141.0" layoutY="480.0" prefHeight="30.0" prefWidth="294.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="btnGuardarProd" alignment="CENTER" mnemonicParsing="false" onAction="#handleGuardar" styleClass="buttons" stylesheets="@../../../css/components.css" text="Guardar">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../com.example.image/save.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="Inter Regular" size="13.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" styleClass="buttons" stylesheets="@../../../css/components.css" text="Cancelar" GridPane.columnIndex="1">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../com.example.image/close.png" />
                </ImageView>
            </graphic>
        <font>
            <Font name="Inter Regular" size="13.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>
</GridPane>
