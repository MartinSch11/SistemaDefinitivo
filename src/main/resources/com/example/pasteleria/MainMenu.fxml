         </Text>

         <!-- Proveedores Button -->
         <Button id="btnProveedores" fx:id="btnProveedores" mnemonicParsing="false" onAction="#handleProveedores" prefHeight="125.0" prefWidth="125.0" styleClass="buttonsMainMenu" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
