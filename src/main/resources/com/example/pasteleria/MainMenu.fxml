         </Button>
         <Text styleClass="txtButtonsMainMenu" text="Stock" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
            <font>
               <Font name="Inter 18pt Regular" size="14.0" />
            </font>
         </Text>

      </GridPane>
